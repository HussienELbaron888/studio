rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to be created during signup
    match /user/{userId} {
      allow create;
      allow read, update, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow admin to read/write anything else
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
