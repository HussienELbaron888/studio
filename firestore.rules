rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection:
    // - Allow user creation for anyone (for signup)
    // - Allow users to read/update their own data
    // - Allow admins to do anything
    match /user/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }

    // Public content collections:
    // - Allow anyone to read
    // - Only allow admins to write (create, update, delete)
    match /activities/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /trips/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /events/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /talents/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /gallery/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /slider/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow admins to read/write any other document
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
