rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is an admin based on custom claims
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // An admin can read any user document
      // A user can read their own document
      allow read: if isAdmin() || request.auth.uid == userId;
      
      // A user can update their own document
      allow update: if request.auth.uid == userId;

      // Allow anyone to create their own user document during registration
      allow create: if request.auth.uid == userId;
    }

    // Rules for 'activities' and 'trips' collections
    match /{collection}/{docId} where collection in ['activities', 'trips'] {
      // Anyone can read (get, list)
      allow get, list: if true;
      // Only admins can create, update, or delete
      allow write: if isAdmin();
    }

    // Rules for user subscriptions subcollection
    match /users/{userId}/subscriptions/{subscriptionId} {
      // Users can read, create, and delete their own subscriptions
      allow read, create, delete: if request.auth.uid == userId;
    }
  }
}
