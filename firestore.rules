rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /user/{userId} {
      // Allow any user to create their own user document upon signup.
      allow create: if request.auth.uid == userId;
      // Allow users to read/update their own data, or admins to do so.
      allow read, update, delete: if request.auth.uid == userId || get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    // This rule is broad and for development. For production, you'd want more specific rules.
    // It allows admins to read/write anywhere.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
