
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    match /user/{userId} {
      // Users can read their own data, Admins can read anyone's data
      allow read: if isOwner(userId) || isAdmin();
      
      // Any authenticated user can create a user document (register)
      allow create: if request.auth.uid != null;

      // Users can update their own data, Admins can update anyone's data
      allow update: if isOwner(userId) || isAdmin();

      // Only admins can delete user documents
      allow delete: if isAdmin();

      match /subscriptions/{subscriptionId} {
        // A user can read/write their own subscriptions. Admins have full access.
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
